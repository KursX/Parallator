<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parallator.controller.DialogController" minWidth="300">
    <padding>
        <Insets bottom="5.0" top="5.0" left="5.0" right="5.0"/>
    </padding>
    <TextField fx:id="mail" promptText="Почта для ответа"/>
    <TextField fx:id="from" promptText="Язык исходника">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </TextField>
    <TextField fx:id="to" promptText="Язык перевода">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </TextField>
    <TextField fx:id="fromField" promptText="Название исходника">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </TextField>
    <TextField fx:id="toField" promptText="Название перевода">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </TextField>
    <TextField fx:id="fromAuthor" promptText="Имя автора на языке исходника">
        <VBox.margin>
            <Insets top="5.0"/>
        </VBox.margin>
    </TextField>
    <TextField fx:id="toAuthor" promptText="Имя автора на языке перевода">
        <VBox.margin>
            <Insets top="5.0" bottom="5.0"/>
        </VBox.margin>
    </TextField>
    <HBox alignment="CENTER">
        <Button fx:id="cancel" text="Отмена">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="send" text="Отправить"/>
    </HBox>
</VBox>
