<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parallator.Controller">

    <HBox VBox.vgrow="ALWAYS">
        <TableView fx:id="chapters" maxWidth="100">
            <columns>
                <TableColumn fx:id="chapter" text="Главы" />
            </columns>
        </TableView>

        <TableView fx:id="table" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="input" text="Исходник" />
                <TableColumn fx:id="output" text="Перевод" />
            </columns>
        </TableView>
    </HBox>
</VBox>
